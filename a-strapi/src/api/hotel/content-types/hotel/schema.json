{
  "kind": "collectionType",
  "collectionName": "hotels",
  "info": {
    "singularName": "hotel",
    "pluralName": "hotels",
    "displayName": "Hotels"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nameHotel": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Budget",
        "Economy",
        "Standard",
        "Comfort",
        "Premium",
        "Apartments"
      ]
    },
    "description": {
      "type": "enumeration",
      "enum": [
        "Пляж: песок, <50 m",
        "Бассейн: закрытый бассейн",
        "Лыжные трассы, <300 m",
        "Центр города, <10 min",
        "Сауна и камин",
        "Вид на горы"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "hotel_options": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::hotel-option.hotel-option",
      "mappedBy": "hotels"
    },
    "tour": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::tour.tour"
    },
    "tour_option": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::tour-option.tour-option",
      "inversedBy": "hotels"
    }
  }
}
